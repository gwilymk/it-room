- form_tag do
  %h3= I18n.t('admin.login.message')

  %label{:for => "username"}= I18n.t('admin.login.username')
  = text_field_tag :username, params[:username]

  %br

  %label{:for => 'password'}= I18n.t('admin.login.password')
  = password_field_tag :password

  %br

  = submit_tag I18n.t('admin.login.login'), :class => 'button'

