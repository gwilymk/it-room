%html
  %head
    = csrf_meta_tag

    %title= @page_title || I18n.t('layout.header.title')

    = stylesheet_link_tag :all
    = javascript_include_tag :defaults

    :javascript
      var end = #{TermDate.days_until_end};
      var day_names = #{I18n.t('date.day_names_short').to_json};
      var month_names = #{I18n.t('date.month_names').to_json};

    = javascript_include_tag 'application'

  %body
    #header
      = image_tag "logo.png", :alt => 'Logo', :id => 'header_image-1'
      = image_tag "logo.png", :alt => 'Logo', :id => 'header_image-2'

      .title-text
        = I18n.t 'layout.title.one'

      .title-text
        = I18n.t 'layout.title.two'

      - if session[:user_id]
        #change_language
          = form_tag '/users/update_language', :method => :post do
            .field
              = select_tag :prefered_language, options_for_select(LANGUAGES, I18n.locale), :onchange => 'this.form.submit();'

    #sidebar
      - if user = User.find_by_id(session[:user_id])
        %p
          = I18n.t('layout.sidebar.logged_in', :user => user.name)

        #todays_bookings
          %p
            - unless @bookings_today.blank?
              = I18n.t('layout.sidebar.today_bookings')
              %ul#today_booking-table
              - @bookings_today.each do |booking|
                %li= I18n.t('layout.sidebar.lesson_number', :lesson => booking.lesson_number.to_s, :room => Room.find(booking.room_id).name)
            - else
              = I18n.t('layout.sidebar.no_bookings')


      = link_to I18n.t('layout.sidebar.home'), {:controller => 'welcome', :action => 'index'}, :class => 'button'
      %br
      = link_to I18n.t('layout.sidebar.timetable'), {:controller => 'timetable', :action => 'index'}, :class => 'button'
      %br
      - unless user
        = link_to I18n.t('layout.sidebar.login'), {:controller => 'admin', :action => 'login'}, :class => 'button'
      - else
        = link_to I18n.t('layout.sidebar.settings'), {:controller => 'admin', :action => 'preferences'}, :class => 'button'
        = link_to I18n.t('layout.sidebar.bookings'), {:controller => 'bookings', :action => 'index'}, :class => 'button'
        = link_to I18n.t('layout.sidebar.logout'), {:controller => 'admin', :action => 'logout'}, :class => 'button'

        - if user.access_level >= 3
          = link_to I18n.t('layout.sidebar.auto_book'), {:controller => 'admin', :action => 'auto_book'}, :class => 'button'

        - if user.access_level == 5
          = link_to I18n.t('layout.sidebar.rooms'), {:controller => 'rooms', :action => 'index'}, :class => 'button'
          %br
          = link_to I18n.t('layout.sidebar.users'), {:controller => 'users', :action => 'index'}, :class => 'button'
          %br
          = link_to I18n.t('layout.sidebar.term_dates'), {:controller => 'term_dates', :action => 'index'}, :class => 'button'

    #main-content
      - if flash[:notice] || @message
        #notice-dialog{:title => I18n.t('layout.notice.title')}
          - if @message
            != @message
          - elsif flash[:notice]
            - if /(NO TRANSLATE)(.*)/ =~ flash[:notice].to_s
              != Regexp.last_match[2]
            - else
              = I18n.t flash[:notice]
      #dialog_space
        #dialog_contents
          %br
      = yield

