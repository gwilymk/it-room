= form_for @user, :id => 'form' do |f|
  = if @user.errors.any?

    #error_explanation{:title => 'Error'}
      %h2= pluralize(@user.errors.count, "error") + " prohibited this user from being saved:"
      %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :username
    %br
    = f.text_field :username
  .field
    = f.label :access_level
    %br
    = f.select :access_level, User::ACCESS_LEVELS, :prompt => 'Access Level'
  .actions
    = f.submit :class => 'button'

